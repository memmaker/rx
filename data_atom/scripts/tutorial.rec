%rec: definitions

var: OLDMAN
set: ActorWithName('grim_beard')

%rec: outcomes

if: IsDead(OLDMAN)
do: AddChatter(OLDMAN, 'You\'ll regret this.')

%rec: cancel

if: true
do: AddChatter(OLDMAN, 'Whatever.')

%rec: frames

if: true
do: AddChatter(OLDMAN, 'Can you move? Try {{ .keys_move }} to move around.')

if: HasFlag('playerSteps')
do: AddChatter(OLDMAN, 'Great! We are making progress.')

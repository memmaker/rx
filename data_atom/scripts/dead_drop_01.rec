%rec: definitions

var: DD
set: ContainerWithName('dead_drop')

%rec: outcomes

if: HasFlag('starter(completed)')
do: Hilite('>>> You have mail <<<')

%rec: cancel

%rec: frames

if: IsInContainer(DD, 'gold | 500')
do: SaveTimeNow('dd_01_deposited')

if: IsHoursAfter('dd_01_deposited', 6)
do: RemoveFromContainer(DD, 'gold | 500')
do: AddToContainer(DD, 'leather_armor')
do: SetFlag('starter(completed)')